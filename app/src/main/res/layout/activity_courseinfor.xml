<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bar3"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toStartOf="@+id/msg"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_conversion_absoluteHeight="50dp"
        tools:layout_conversion_absoluteWidth="50dp" />

    <ImageView
        android:id="@+id/chatbubble"
        android:layout_width="260dp"
        android:layout_height="147dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="@+id/msg"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chatbubble" />

    <android.support.v7.widget.CardView
        android:layout_width="108dp"
        android:layout_height="57dp"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="200dp">

        <TextView
            android:id="@+id/code1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Code"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="181dp" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:layout_editor_absoluteX="76dp"
            tools:layout_editor_absoluteY="193dp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="326dp">

        <TextView
            android:id="@+id/name1"
            android:layout_width="100dp"
            android:layout_height="18dp"
            android:layout_marginStart="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="58dp"
            android:layout_marginBottom="33dp"
            android:text="Course Name"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/code1"
            app:layout_constraintStart_toEndOf="@+id/code1"
            app:layout_constraintTop_toTopOf="@+id/code1"
            app:layout_constraintVertical_bias="0.651"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <TextView
            android:id="@+id/name"
            android:layout_width="85dp"
            android:layout_height="18dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="197dp"
            tools:layout_editor_absoluteY="194dp" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="293dp">

        <TextView
            android:id="@+id/credits1"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:text="Credits"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="237dp" />

        <TextView
            android:id="@+id/credits"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="304dp" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="303dp">

        <TextView
            android:id="@+id/pre"
            android:layout_width="71dp"
            android:layout_height="23dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="259dp" />

        <TextView
            android:id="@+id/pre1"
            android:layout_width="71dp"
            android:layout_height="23dp"
            android:text="Pre-Req"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="192dp" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="326dp">

        <TextView
            android:id="@+id/future"
            android:layout_width="83dp"
            android:layout_height="23dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="221dp"
            tools:layout_editor_absoluteY="215dp" />

        <TextView
            android:id="@+id/future1"
            android:layout_width="83dp"
            android:layout_height="23dp"
            android:text="Options"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="221dp"
            tools:layout_editor_absoluteY="148dp" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="349dp">

        <TextView
            android:id="@+id/discrip1"
            android:layout_width="150dp"
            android:layout_height="18dp"
            android:text="Course Description"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="57dp"
            tools:layout_editor_absoluteY="213dp" />

        <TextView
            android:id="@+id/discrip"
            android:layout_width="275dp"
            android:layout_height="180dp"
            android:text="TextView"
            tools:layout_editor_absoluteX="41dp"
            tools:layout_editor_absoluteY="371dp" />
    </android.support.v7.widget.CardView>

    <android.support.design.button.MaterialButton
        android:id="@+id/back"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:background="@android:color/holo_green_light"
        android:text=" Back to Grade Selection "
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>