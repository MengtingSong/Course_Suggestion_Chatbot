<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".subject">


    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon"
        tools:layout_conversion_absoluteHeight="50dp"
        tools:layout_conversion_absoluteWidth="50dp" />

    <ImageView
        android:id="@+id/chatbubble"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="@+id/msg"
        app:layout_constraintHorizontal_bias="0.554"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:srcCompat="@drawable/chatbubble" />


    <TextView
        android:id="@+id/msg"
        android:layout_width="210dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:text="In this elective branch, click on the subject name to see more course information!"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/chatbubble"
        tools:layout_conversion_absoluteHeight="135dp"
        tools:layout_conversion_absoluteWidth="208dp" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="536dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.CardView
            android:id="@+id/ce"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/productGridBackgroundColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ee">

            <ImageView
                android:id="@+id/cepic"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:srcCompat="@drawable/computer_engineering" />

            <android.support.design.button.MaterialButton
                android:id="@+id/sub1"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@android:color/holo_green_light"
                android:text="Computer Engineering"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/ee"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:cardBackgroundColor="@color/productGridBackgroundColor"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ce"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/eepic"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                app:srcCompat="@drawable/electronic" />

            <android.support.design.button.MaterialButton
                android:id="@+id/sub3"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@android:color/holo_green_light"
                android:text="Electromagnetic and Electronic Design"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sub2" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/system"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/optic"
            app:layout_constraintTop_toBottomOf="@+id/ee">

            <ImageView
                android:id="@+id/systempic"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                app:srcCompat="@drawable/system_control" />

            <android.support.design.button.MaterialButton
                android:id="@+id/sub4"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@android:color/holo_green_light"
                android:text="System Control and Microsystem and Electrical Energy "
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="8sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sub3" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/optic"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/productGridBackgroundColor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/system">

            <ImageView
                android:id="@+id/opticpic"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                app:srcCompat="@drawable/optics" />

            <android.support.design.button.MaterialButton
                android:id="@+id/sub8"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@android:color/holo_green_light"
                android:text="Optics and Photonics"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:textAllCaps="false"
                tools:layout_editor_absoluteX="240dp"
                tools:layout_editor_absoluteY="142dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/telecom"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/productGridBackgroundColor"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/optic">

            <ImageView
                android:id="@+id/telecompic"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                app:srcCompat="@drawable/telecommunication" />

            <android.support.design.button.MaterialButton
                android:id="@+id/sub2"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@android:color/holo_green_light"
                android:text="Digital Signal Processing and Telecommunication"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="8sp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="180dp" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/be"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/productGridBackgroundColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/telecom"
            app:layout_constraintTop_toTopOf="@+id/telecom">

            <ImageView
                android:id="@+id/bepic"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                app:srcCompat="@drawable/bioengineering" />

            <android.support.design.button.MaterialButton
                android:id="@+id/sub6"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="83dp"
                android:background="@android:color/holo_green_light"
                android:text="Bioengineering"
                android:textColor="@color/colorPrimary"
                android:textSize="10sp"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sub8" />

        </android.support.v7.widget.CardView>

    </android.support.constraint.ConstraintLayout>

    <android.support.design.button.MaterialButton
        android:id="@+id/back"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:background="@android:color/holo_green_light"
        android:text=" Back to Grade Selection "
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>

