<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bar3" />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:layout_constraintEnd_toStartOf="@+id/msg"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_conversion_absoluteHeight="50dp"
        tools:layout_conversion_absoluteWidth="50dp" />

    <ImageView
        android:id="@+id/chatbubble"
        android:layout_width="260dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:srcCompat="@drawable/chatbubble"
        tools:layout_editor_absoluteY="5dp" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Hmmm...Let me think...Which subject are you interested in? No. It's too hard to read your mind! And I don't want to burn my supreme electronic brain!
So just click on the suject names which you want more information."
        app:layout_constraintBottom_toBottomOf="@+id/chatbubble"
        app:layout_constraintEnd_toEndOf="@+id/chatbubble"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/chatbubble"
        app:layout_constraintTop_toTopOf="@+id/chatbubble"
        app:layout_constraintVertical_bias="0.49" />

    <android.support.v7.widget.CardView
        android:id="@+id/humanityset"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="70dp"
        app:cardBackgroundColor="@color/productGridBackgroundColor"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chatbubble">

        <ImageView
            android:id="@+id/humanpic"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:srcCompat="@drawable/humanity" />

        <android.support.design.button.MaterialButton
            android:id="@+id/humanity"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@android:color/holo_green_light"
            android:text="Humanity Courses"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub2" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/generalset"
        android:layout_width="130dp"
        android:layout_height="127dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        app:cardBackgroundColor="@color/productGridBackgroundColor"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bar">

        <ImageView
            android:id="@+id/generalpic"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            app:srcCompat="@drawable/general" />

        <android.support.design.button.MaterialButton
            android:id="@+id/general"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@android:color/holo_green_light"
            android:text="General Education"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sub2" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/socialset"
        android:layout_width="130dp"
        android:layout_height="129dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/productGridBackgroundColor"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/humanityset">

        <ImageView
            android:id="@+id/socialpic"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            app:srcCompat="@drawable/social" />

        <android.support.design.button.MaterialButton
            android:id="@+id/social"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@android:color/holo_green_light"
            android:text="Social Science"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.v7.widget.CardView>

    <android.support.design.button.MaterialButton
        android:id="@+id/back"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:background="@android:color/holo_green_light"
        android:text=" Back to Grade Selection "
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textColorLink="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>
