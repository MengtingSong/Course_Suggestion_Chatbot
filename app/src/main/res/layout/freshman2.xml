<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FRESHMAN 2"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="36sp"
        tools:layout_editor_absoluteX="82dp"
        tools:layout_editor_absoluteY="25dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_dark"
        android:text=" CAS MA 124 "
        android:textSize="18sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="207dp" />
    <Button
            android:text=" CAS PY 211 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn2"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn3" android:background="@android:color/holo_orange_dark"/>
    <Button
            android:text=" ENG EK 131/2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn3"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn4" android:background="@android:color/holo_orange_dark"/>
    <Button
            android:text=" ENG EK 103 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn4"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn5" android:background="@android:color/holo_orange_dark"/>
    <Button
            android:text=" CAS WR 150 "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn5"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/btn4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@android:color/holo_orange_dark"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="110dp" />

    <TextView
        android:id="@+id/msg"
        android:layout_width="217dp"
        android:layout_height="70dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="110dp" />
</android.support.constraint.ConstraintLayout>