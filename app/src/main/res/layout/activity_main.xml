        android:text="SENIOR 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/btn8"
        android:background="@android:color/holo_green_light" app:layout_constraintStart_toEndOf="@+id/btn7"
        android:layout_marginStart="80dp" android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@+id/btn6"/>
