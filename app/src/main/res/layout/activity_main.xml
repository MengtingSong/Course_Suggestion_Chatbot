        android:text="SENIOR 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/btn7"
        android:background="@android:color/holo_green_light"
        android:textSize="14sp"
        android:layout_marginStart="52dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/btn5"/>
